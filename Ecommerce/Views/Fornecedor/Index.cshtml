@model Ecommerce.Models.ViewModels.FornecedorViewModel

<h2 class="text-uppercase">Cadastros dos Fornecedores</h2>


<div  class="card mb-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th class="text-uppercase">Nome da Empresa</th>
                <th class="text-uppercase">Nome</th>
                <th class="text-uppercase">CPF</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var Fornecedor in ViewBag.fornecedores)
            {
                <tr>

                    <td>
                        @Fornecedor.Id
                    </td>
                    <td>
                        @Fornecedor.NomeEmpresa
                    </td>
                    <td>
                        @Fornecedor.Nome
                    </td>
                    <td>
                        @Fornecedor.CPF
                    </td>

                    <td>
                        <a class="btn btn-primary btn-danger text-uppercase" href="Fornecedor/Remover/@Fornecedor.Id">Excluir</a>
                    </td>
                    <td>
                        <a class="btn btn-primary text-uppercase" href="~/Fornecedor/Alterar/@Fornecedor.Id">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success text-uppercase"href='~/Fornecedor/Cadastro';">Cadastrar</a>
</div>