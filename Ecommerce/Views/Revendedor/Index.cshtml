@model Ecommerce.Models.ViewModels.RevendedorViewModel

<h2 class="text-uppercase">Cadastros dos Revendedores</h2>


<div class="card mb-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th class="text-uppercase">Nome</th>
                <th class="text-uppercase">CPF</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var Revendedor in ViewBag.revendedores)
            {
                <tr>

                    <td>
                        @Revendedor.Id
                    </td>
                    <td>
                        @Revendedor.Nome
                    </td>
                    <td>
                        @Revendedor.CPF
                    </td>

                    <td>
                        <a class="btn btn-primary btn-danger text-uppercase" href="Revendedor/Remover/@Revendedor.Id">Excluir</a>
                    </td>
                    <td>
                        <a class="btn btn-primary text-uppercase" href="~/Revendedor/Alterar/@Revendedor.Id">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success text-uppercase" href='~/Revendedor/Cadastro' ;">Cadastrar</a>
</div>