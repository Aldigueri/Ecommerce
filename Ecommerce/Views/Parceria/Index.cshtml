@model Ecommerce.Models.ViewModels.ParceriaViewModel

<h2 class="text-uppercase">Cadastros dos Parceiros</h2>


<div class="card mb-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th class="text-uppercase">Nome da Empresa</th>
                <th class="text-uppercase">Nome</th>
                <th class="text-uppercase">CPF</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var Parceiro in ViewBag.parceria)
            {
            <tr>

                <td>
                    @Parceiro.Id
                </td>
                <td>
                    @Parceiro.NomeEmpresa
                </td>
                <td>
                    @Parceiro.Nome
                </td>
                <td>
                    @Parceiro.CPF
                </td>

                <td>
                    <a class="btn btn-primary btn-danger text-uppercase" href="Parceria/Remover/@Parceiro.Id">Excluir</a>
                </td>
                <td>
                    <a class="btn btn-primary text-uppercase" href="~/Parceria/Alterar/@Parceiro.Id">Editar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success text-uppercase" href='~/Parceria/Cadastro' ;">Cadastrar</a>
</div>