@model Ecommerce.Models.Categoria

<title>OurVibbe - Detalhar categoria</title>

<div class="card mb-3">
    <div class="card-header">
        <h4>Detalhes da categoria</h4>
    </div>

    <div class="card-body">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>
        <p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </p>
    </div>
</div>



