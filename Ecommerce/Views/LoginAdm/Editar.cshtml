@model Ecommerce.Models.Usuario
@using Ecommerce.Models.Enum

<title>OurVibbe - Editar Perfil</title>

<div class="card mb-3">
    <div class="card-header">
        &nbsp;
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Editar Perfil</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })

                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                </div>              

                <div class="form-group">
                    @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*Criar sistema para editar perfil de outros usuarios*@
                <div class="form-group">
                    @Html.Label("Tipo de Usuario", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.DropDownList("TipoUsuario",
                        new List<SelectListItem>() {
                            new SelectListItem() { Text= "Administrador", Value = ((int)UsuarioTipo.Administrador).ToString()},
                            new SelectListItem() { Text= "Cliente", Value = ((int)UsuarioTipo.Cliente).ToString() },
                          
                        },
                        htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UsuarioTipo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                        <a align="bottom" href="~/LoginAdm/Lista" class="btn btn-primary">Voltar</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>